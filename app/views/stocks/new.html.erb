<center>
<h1>Add a Stock</h1>
<i><p>Simply enter the ticker symbol and we'll handle the rest.</p></i>
<br>
<%= form_for(@stock) do |f| %>
  <div class="field">
    <%= f.label :ticker %><br>
    <%= f.text_field :ticker %>
  </div>
  <div class="field">
    <%= f.hidden_field :name, :string => "invalid ticker" %>
  </div>
  <div class="field">
    <%= f.hidden_field :price, :value => 99999 %>
  </div>
	<div class="actions">
		<%=f.submit%>
	</div>
  <div class="error-msg"> 
    <% if @stock.errors.any? %> 
    <ul> 
      <% @stock.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
      <% end %> 
    </ul> 
    <% end %> 
  </div>
<% end %>
</center>