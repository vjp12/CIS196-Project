<h1>New stock</h1>
<%= form_for(@stock) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, :step => 'any' %>
  </div>
  <div class="field">
    <%= f.hidden_field :market_value, :value => 0 %>
  </div>
  <div class="field">
    <%= f.hidden_field :investors, :value => 0 %>
  </div>
	<div class="actions">
		<%=f.submit%>
	</div>
  <div class="error-msg"> 
    <% if @stock.errors.any? %> 
    <ul> 
      <% @stock.errors.full_messages.each do |msg| %> 
      <li><%= msg %></li> 
      <% end %> 
    </ul> 
    <% end %> 
  </div>
<% end %>