<p id="notice"><%= notice %></p>

<p>
  <strong>Ticker:</strong>
  <%= @stock.ticker %>
</p>

<p>
  <strong>Name:</strong>
  <%= @stock.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @stock.price %>
</p>

<p>
  <strong>Market value:</strong>
  <%= @stock.market_value %>
</p>

<p>
  <strong>Investors:</strong>
  <%= @stock.investors %>
</p>

<%= link_to 'Edit', edit_stock_path(@stock) %> |
<%= link_to 'Back', stocks_path %>

<h2><strong>My Investments:</strong></h2>
<% @my_investments.each do |my_investment| %>
	<div class="dash-review">
		<h2>share change: <%= my_investment.share_change %></h2>
	</div>
<%end%>	

<h1><strong>Latest Investments:</strong></h1>
<% @investments.each do |investment| %>
	<div class="dash-review">
		<h2><%= link_to Member.where(id: investment.member_id).take!.name, investment_path(investment.member_id) %> </h2>
		<h5>share change: <%= investment.share_change %></h5>
	</div>
<%end%>	