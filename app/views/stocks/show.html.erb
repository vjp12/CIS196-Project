<h1><%= @stock.name %></h1>

<img src= <%= @url %> />

<center>
  <div class="float">
    <button class= "hide-btn"> Show my investments </button>
    <div class="dash-review3">
      <h4><strong>My Net Investment:</strong></h4>
        <h5>Net change: <%= @net_investment %></h5>
    </div>
    <div class="dash-review">
      <h4><strong>My Investments:</strong></h4>
      <h5>
      <% @i = 1 %>  
      <% @my_investments.each do |my_investment| %>
      <%= @i %>) Shares: <%= my_investment.share_change %>
      <br>
        <% @i += 1 %>  
      <%end%>
      </h5>
    </div>
  </div>  

  <div class="float"> 
    <center> 
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Ticker:</strong>
      <%= @stock.ticker %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @stock.price %>
    </p>

    <%= link_to 'Back', stocks_path %>
    </center>  
  </div>


  <div class="float">
    <button class= "hide-btn2"> Show Latest Investments </button>
    <div class="dash-review4">
      <h4><strong>Latest Investments in <%= @stock.ticker %>:</strong></h4>
    </div>
    <div class="dash-review2">  
      <h5> 
      <% @i = 1 %> 
      <% @investments.each do |investment| %>
        <%= @i %>)
          <%= link_to Member.where(id: investment.member_id).take!.name, investment_path(investment.member_id) %>
          | Shares: <%= investment.share_change %>
          <br>
        <% @i += 1 %>  
      <%end%> 
      </h5>
    </div>
  </div>  
</center>