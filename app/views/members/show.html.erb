<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @member.name %>
</p>

<p>
  <strong>Id:</strong>
  <%= @member.id %>
</p>

<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<p>
  <strong>Funds:</strong>
  <%= @member.funds %>
</p>

<p>
  <strong>Active Investments:</strong>
  <%= @member.active_investments %>
</p>

<p>
  <strong>Value:</strong>
  <%= @member.value %>
</p>

<%= link_to 'Edit', edit_member_path(@member) %> |
<%= link_to 'Back', members_path %>

<h1><strong>Investments:</strong></h1>
<% @investments.each do |investment| %>
  <div class="dash-review">
  <h2><%= link_to stock.title, investment_path(investment.id) %></h2>
  <h5><%= investment.member.name%></h5>
  <p><%= investment.stock_change %></p>
</div>
<%end%>

<h1><strong>Posts:</strong></h1>
<% @posts.each do |post| %>
  <div class="dash-review">
  <h2><%= link_to post.title, post_path(post.id) %></h2>
  <h5><%= post.member.name%></h5>
  <p><%= post.body %></p>
</div>
<%end%>

